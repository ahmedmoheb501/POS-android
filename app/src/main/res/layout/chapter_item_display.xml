<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projects.iamlegend.hollyquranappv1.chapter_item_display">

    <android.support.constraint.Guideline
        android:id="@+id/guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".15"
        android:orientation="horizontal"
        />

    <TextView
        android:id="@+id/chapterNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سورة"
        app:layout_constraintBottom_toBottomOf="@id/chapterNameBg_IV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:Text="سورة الاخلاص"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        />



    <ImageView
        android:id="@+id/chapterNameBg_IV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guide1"
        android:background="@drawable/chapter_title"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/versesRV"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/guide1"
        ></android.support.v7.widget.RecyclerView>





</android.support.constraint.ConstraintLayout>
