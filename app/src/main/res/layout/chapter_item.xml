<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <TextView
        android:id="@+id/ChapterIndex"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chapter_name"
        android:textColor="@color/textWhite"
        android:background="@color/colorPrimaryDark"
        tools:text="1"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/chapter_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="35sp"
        android:layout_marginStart="20dp"
        android:text="الفاتحه"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@id/iv_marker"
        app:layout_constraintStart_toEndOf="@id/ChapterIndex"/>

    <ImageView
        android:id="@+id/iv_marker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/chapter_name"
        app:layout_constraintEnd_toStartOf="@id/versesCountTv"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/versesCountTv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/iv_marker"
        app:layout_constraintEnd_toStartOf="@id/iv_maki_madani"
        android:textColor="@color/colorPrimaryDark"
        tools:text="1000"
        android:textSize="25sp"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:layout_marginStart="50dp"
        android:paddingTop="5dp"
        />

    <ImageView
        android:id="@+id/iv_maki_madani"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/versesCountTv"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/makka"
        android:layout_marginStart="10dp"
        />
</android.support.constraint.ConstraintLayout>